<body onresize="setPanelWidth();">
	<div id="main">
		<div id="main-topPanel" class="header show clearfix">
			<div class="header-title">
	             <div class="logo">
	                 <img id="logoImg" alt="">
	                 <span id="spanTitle"></span>
	             </div>
            </div>
			<div class="login-mess" style="display:none;">
				<div class="login-mess-account">
					<a class="down"><span class="account"></span><em class="arrows"></em></a>
					<a class="email" style="display:none;"><i></i></a>
					<a id="login-out" class="login-out"><span></span></a>
				</div>
				<div class="quick-menu">
					<p><a class="password"></a></p>
